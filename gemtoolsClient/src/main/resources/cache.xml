<!DOCTYPE client-cache PUBLIC 
 "-//GemStone Systems, Inc.//GemFire Declarative Caching 8.0//EN" 
 "http://www.gemstone.com/dtd/cache8_0.dtd">
<client-cache>

	<!-- Fix? : Pool is specified in metadata so has to be preset on all clients -->
	 
    <pool name="myPool" subscription-enabled="true">
        <locator host="${LOCATOR_1_HOST}" port="${LOCATOR_1_PORT}"/>
        <locator host="${LOCATOR_2_HOST}" port="${LOCATOR_2_PORT}"/>
    </pool>
    
	<pdx read-serialized="true"/>
   
    <region name="__regionAttributesMetadata">
	  	<region-attributes refid="CACHING_PROXY" pool-name="myPool">
			<cache-listener>
				<class-name>io.pivotal.adp_dynamic_region_management.MetadataRegionCacheListener</class-name>
			</cache-listener>
		</region-attributes>
	</region>
	    
</client-cache>